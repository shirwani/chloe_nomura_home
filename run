# Create python venv in project directory
# python -m venv venv

# To launch python venv
source venv/bin/activate

# To pip install from requirements.txt (inside python venv)
pip install --upgrade pip
pip install gunicorn
pip install -r requirements.txt

# Export environment variables from secrets/export_secrets_to_environment
source ./secrets/export_secrets_to_environment

# Run Flask app using gunicorn
# nohup python main.py &
pkill -f chloe_nomura_home
nohup gunicorn -b 127.0.0.1:5007 main:app > /dev/null 2>&1 &